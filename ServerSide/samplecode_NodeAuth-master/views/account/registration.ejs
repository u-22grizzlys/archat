<!DOCTYPE html>
<html lang="ja">
  <head>
    <%- include("../_head.ejs", {title: "/account/registration"}) %>

  </head>
  <body>

    <%- include("../_nav.ejs") %>

    <div class="container">
      <div class="col-sm-offset-3 col-sm-6">
        <h1><i class="fa fa-sign-in"></i> アカウントの作成</h1>
        <div class="panel panel-default">
          <div class="panel-body">


            <form class="form-horizontal" method="POST" action="/account/registration">
              <div class="form-group">
                <label for="username" class="col-sm-4 control-label">ニックネーム</label>
                <div class="col-sm-8">
                  <input type="text" class="form-control" id="username" name="username" />
                </div>
              </div>


              <div class="form-group">
                <label for="password" class="col-sm-4 control-label">パスワード</label>
                <div class="col-sm-8">
                  <input type="password" class="form-control" id="password" name="password" />
                </div>
              </div>


              <div class="form-group">
                 <label for="email address" class="col-sm-4 control-label">メールアドレス</label>
                 <div class="col-sm-8">
                   <input type="email address" class="form-control" id="email address" name="email address" />
                 </div>
              </div>


               <div class="form-group">
                  <label for="street address" class="col-sm-4 control-label">住所</label>
                  <div class="col-sm-8">
                    <input type="street address" class="form-control" id="street address" name="street address" />
                  </div>
               </div>


                <div class="form-group">
                   <label for="phone number" class="col-sm-4 control-label">生年月日</label>
                   <div class="col-sm-8">
                     <input type="phone number" class="form-control" id="phone number" name="phone number" />
                   </div>
                 </div>


                <div class="form-group">
                   <label for="phone number" class="col-sm-4 control-label">連絡先電話番号</label>
                   <div class="col-sm-8">
                     <input type="phone number" class="form-control" id="phone number" name="phone number" />
                   </div>
                </div>


              <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                  <input type="submit" class="btn btn-default btn-lg" value="送信する" />
                </div>
              </div>
              <% if (message && message.length !== 0) {%>
              <div class="alert alert-danger" role="alert">
                <i class="fa fa-"></i>
                <span class="sr-only">ERROR: </span>
                <%= message %>
              </div>
              <%}%>
            </form>
          </div>
        </div>
      </div>
    </div><!-- /.container -->
 
    <%- include("../_scripts.ejs") %>
  </body>
</html>